module VDecoSet : sig

  val empty : deco-set
  val simple-frame : length -> color -> deco-set

end = struct

  let empty =
    let deco _ _ _ _ = [] in
      (deco, deco, deco, deco)


  let simple-frame t color =
    let decoS (x, y) wid hgt dpt =
      [ stroke t color (Gr.rectangle (x, y -' dpt) (x +' wid, y +' hgt)); ]
    in
      (decoS, decoS, decoS, decoS)
end
